{

  "manifest_version": 2,
  "name": "Powerfy",
  "version": "1.0",

  "applications": {
    "gecko": {
      "id": "powerfy@mozilla.org"
    }
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "*://*.example.com/",
    "cookies",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>"
  ],

  "icons": {
    "48": "icons/powerfy-48.png",
    "96": "icons/powerfy-96.png"
  },

  "browser_action": {
    "default_icon": "icons/powerfy.png",
    "default_title": "Powerfy",
    "default_popup": "popup/browser_action.html"
  },

  "background": {
    "scripts": ["background.js"]
  }

}

